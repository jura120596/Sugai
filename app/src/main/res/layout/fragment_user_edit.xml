<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.User.UserEditFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.jura120596.molodec.ui.components.AppEditText
                android:id="@+id/etv_prof_edit_second_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:hint="Фамилия"
                android:inputType="textPersonName" />

            <com.github.jura120596.molodec.ui.components.AppEditText
                android:id="@+id/etv_prof_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Имя"
                android:inputType="textPersonName" />

            <com.github.jura120596.molodec.ui.components.AppEditText
                android:id="@+id/etv_prof_edit_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Отчество"
                android:inputType="textPersonName" />

            <com.github.jura120596.molodec.ui.components.AppEditText
                android:id="@+id/etv_prof_edit_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Адрес"
                android:inputType="textPersonName" />

            <com.github.jura120596.molodec.ui.components.AppEditText
                android:id="@+id/etv_prof_edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Почта"
                android:inputType="textPersonName" />

            <com.github.jura120596.molodec.ui.components.AppEditText
                android:id="@+id/etv_prof_edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Телефон"
                android:inputType="number" />

            <com.github.jura120596.molodec.ui.components.AppEditText
                android:id="@+id/etv_prof_edi_numcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Номер карты"
                android:inputType="number" />

            <com.github.jura120596.molodec.ui.components.AppEditText
                android:id="@+id/etv_prof_edit_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Баллы"
                android:inputType="number" />

            <CheckBox
                android:id="@+id/cb_curator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Староста" />

            <com.github.jura120596.molodec.ui.components.AppButton
                android:id="@+id/bt_editProf"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:height="32dp"
                android:text="Сохранить"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>